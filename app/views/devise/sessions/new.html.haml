= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-inputs
    = f.input :login_name, required: false, autofocus: true
    = f.input :password, required: false
    = f.input :remember_me, as: :boolean, label: t('devise.hints.remember_me') if devise_mapping.rememberable?

  .form-actions
    = f.button :submit

= render 'devise/shared/links'
