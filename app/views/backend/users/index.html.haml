- if current_collection.any?
  %table.table
    %tr
      %th #
      %th= t_attribute(:name, User)
      %th= t_attribute(:login_name, User)
      %th= t_attribute(:email, User)
      %th= t_attribute(:role, User)
      %th= t_attribute(:join_date, User)
      %th= t("captions.tools")

    - current_collection.each do |user|
      %tr
        %td= t_value :id, user
        %td= t_value :name, user
        %td= t_value :login_name, user
        %td= t_value :email, user
        %td= t_value :role, user, :translate_text_value
        %td= t_value :join_date, user, :convert_time_value, :full
        %td
          = link_to t("actions.backend/users.show"),
            backend_user_path(user),
            class: "btn btn-primary"
          = link_to t("actions.backend/users.edit"),
            edit_backend_user_path(user),
            class: "btn btn-warning"
          = link_to t("actions.backend/users.destroy"),
            backend_user_path(user),
            class: "btn btn-danger",
            method: :delete,
            data: { confirm: t("warnings.confirm_delete") }

- else
  = no_data_alert

= paginate current_collection
