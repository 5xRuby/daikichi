%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{ "type": "button", "data-toggle": "collapse", "data-target": "#nav-collapse", "aria-expanded": "false" }
        %span.sr-only toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to t("misc.app_title"), root_path, class: "navbar-brand"

    #nav-collapse.collapse.navbar-collapse
      %ul.nav.navbar-nav
        - if can? :view, LeaveApplication
          %li.dropdown
            = dropdown_title t("menu.leave_applications")
            %ul.dropdown-menu
              %li= link_to t("menu_options.personal.leave_times.index"), leave_times_path
              %li= link_to t("menu_options.personal.leave_applications.index"), leave_applications_path
              %li= link_to t("menu_options.personal.leave_applications.new"), new_leave_application_path
        - if can? :manage, User
          %li.dropdown
            = dropdown_title t("menu.backend")
            %ul.dropdown-menu
              %li= link_to t("menu_options.backend.users.index"), backend_users_path
              %li= link_to t("menu_options.backend.users.new"), new_backend_user_path
              %li= link_to t("menu_options.backend.leave_applications.index"),
                backend_leave_applications_path
              %li= link_to t("menu_options.backend.monthly_leave_times.index"),
                backend_monthly_leave_times_path(Time.zone.now.year, Time.zone.now.mon)
              %li= link_to t("menu_options.backend.leave_times.index"),
                backend_leave_times_path

      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.dropdown
            = dropdown_title current_user.login_name
            %ul.dropdown-menu
              %li= link_to t("menu_options.devise.registrations.edit"), edit_user_registration_path
              %li= link_to t("menu_options.devise.sessions.destroy"),
                destroy_user_session_path, method: :delete
        - else
          %li= link_to t("menu_options.devise.sessions.new"), new_user_session_path
          %li= link_to t("menu_options.devise.registrations.new"), new_user_registration_path
