%h2= t("captions.personal.leaves_list")

.status-selector
  = button_tag t('simple_form.options.leave_application.status.pending'),
    class: "btn btn-default col-md-1 col-sm-2 col-xs-8 col-md-offset-0 col-sm-offset-0 col-xs-offset-2 pending"
  = button_tag t('simple_form.options.leave_application.status.approved'),
    class: "btn btn-default col-md-1 col-sm-2 col-xs-8 col-md-offset-0 col-sm-offset-0 col-xs-offset-2 approved"
  = button_tag t('simple_form.options.leave_application.status.rejected'),
    class: "btn btn-default col-md-1 col-sm-2 col-xs-8 col-md-offset-0 col-sm-offset-0 col-xs-offset-2 rejected"
  = button_tag t('simple_form.options.leave_application.status.canceled'),
    class: "btn btn-default col-md-1 col-sm-2 col-xs-8 col-md-offset-0 col-sm-offset-0 col-xs-offset-2 canceled"

- if current_collection.any?
  %table.table
    %thead
      %tr
        %th= t_attribute(:leave_type, LeaveApplication)
        %th= t_attribute(:start_time, LeaveApplication)
        %th= t_attribute(:end_time, LeaveApplication)
        %th= t_attribute(:hours, LeaveApplication)
        %th= t_attribute(:status, LeaveApplication)
        %th= t("captions.tools")
    %tbody
      - current_collection.each do |leave|
        %tr
          %td= t_value :leave_type, leave, :translate_text_value
          %td= t_value :start_time, leave, :convert_time_value
          %td= t_value :end_time, leave, :convert_time_value
          %td= t_value :hours, leave
          %td= t_value :status, leave, :translate_text_value
          %td
            = link_to t("actions.leave_applications.show"),
              leave_application_path(leave),
              class: "btn btn-primary"
            - unless leave.canceled?
              = link_to t("actions.leave_applications.edit"),
                edit_leave_application_path(leave),
                class: "btn btn-warning"
              = link_to t("actions.leave_applications.cancel"),
                cancel_leave_application_path(leave),
                class: "btn btn-danger",
                method: :put,
                data: { confirm: t("warnings.confirm_cancel")}
- else
  = no_data_alert
= paginate current_collection
