= simple_form_for current_object  do |f|
  = f.input :leave_type, required: true, collection: LeaveApplication::LEAVE_TYPE
  - if current_object.new_record?
    = f.input :start_time, date_time_picker_hash(:start, adjusted_time(:start))
    = f.input :end_time, date_time_picker_hash(:end, adjusted_time(:end))
  - else
    = f.input :start_time, date_time_picker_hash(:start, current_object[:start_time])
    = f.input :end_time, date_time_picker_hash(:end, current_object[:end_time])
  = f.input :description, required: true
  = f.button :submit
