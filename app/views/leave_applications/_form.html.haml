= simple_form_for current_object  do |f|
  = f.input :leave_type, required: true, collection: LeaveApplication::LEAVE_TYPE
  - if current_object.new_record?
    = f.input :start_time, new_input_hash(:start)
    = f.input :end_time, new_input_hash(:end)
  - else
    = f.input :start_time, edit_input_hash(:start, current_object[:start_time])
    = f.input :end_time, edit_input_hash(:end, current_object[:end_time])
  = f.input :description, required: true
  = f.button :submit
