%h2= t("captions.leave_times.index", year: Time.zone.today.year)

%table.table
  %thead
    %th._25 假別
    %th._25= t_attribute :quota, LeaveTime
    %th._25= t_attribute :usable_hours, LeaveTime
    %th._25= t_attribute :used_hours, LeaveTime
  %tbody
    - leave_times.each do |item|
      - unless item.leave_type =~ /sick/
        %tr
          %th._25= t_value :leave_type, item, :translate_text_value
          %td._25= item.quota
          %td._25= item.usable_hours
          %td._25= item.used_hours
